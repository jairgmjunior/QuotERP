@{
    var siteMap = Html.MvcSiteMap();
}
<!DOCTYPE html>
<html lang="pt-BR">
    <head>
        <title>Fashion ERP - @(ViewBag.Title ?? siteMap.SiteMapTitle())</title>
        <link rel="shortcut icon" href="~/favicon.png" />
        <meta http-equiv="content-type" content="text/html; charset=UTF-8" />
        <meta name="viewport" content="width=device-width, initial-scale=1.0">
        @RenderSection("css")
        @RenderSection("javascript")
    </head>
    <body class="animated">

        <div id="cl-wrapper">

            <div class="cl-sidebar">
                <div class="cl-toggle"><i class="fa fa-bars"></i></div>
               
                    <div class="menu-space">
                        <div class="content">
                            <div class="sidebar-logo">
                                <div class="logo">
                                    <a href="index2.html"><img src="@Url.Content("~/Content/images/logo_quod_white.png")" alt="ERP - Fashion" /></a>
                                </div>
                            </div>
                            <div class="side-user">
                                <div class="info">
                                    <p>40 <b>GB</b> / 100 <b>GB</b><span><a href="#"><i class="fa fa-plus"></i></a></span></p>
                                    <div class="progress progress-user">
                                        <div class="progress-bar" role="progressbar" aria-valuenow="40" aria-valuemin="0" aria-valuemax="100" style="width: 40%">
                                            <span class="sr-only">50% Complete (success)</span>
                                        </div>
                                    </div>
                                </div>
                            </div>
                            @Html.Raw(@siteMap.Menu().ToString().Replace("nav", "cl-vnavigation").Replace("dropdown", ""))
                        </div>
                    </div>
                    <div class="text-right collapse-button" style="padding: 7px 9px;">
                        <input type="text" class="form-control search" placeholder="Procurar..." />
                        <button id="sidebar-collapse" class="btn btn-default" style=""><i style="color: #fff;" class="fa fa-angle-left"></i></button>
                    </div>
                
            </div>

            <!-- TOP NAVBAR -->

            <div id="head-nav" class="navbar navbar-default">
                <div class="container-fluid">
                    <div class="navbar-collapse">

                        <ul class="nav navbar-nav navbar-right user-nav">
                            <li class="dropdown profile_menu">
                                <a class="dropdown-toggle" data-toggle="dropdown" href="#">
                                    <img src="~/Content/images/avatar-quod-2.jpg" alt="Avatar">
                                    <span>@HttpContext.Current.User.Identity.Name</span>
                                    <b class="caret"></b>
                                </a>
                                <ul class="dropdown-menu">
                                    <li>@Html.ActionLinkAuth("Alterar senha", MVC.Comum.Usuario.AlterarSenha())</li>
                                    <li class="divider"></li>
                                    <li>@Html.ActionLink("Sair", MVC.Home.Logout())</li>
                                </ul>
                            </li>
                        </ul>

                    </div>
                </div>
            </div>

            <div class="cl-mcont">
                <div class="page-head">
                    @if (Request.RawUrl != "/")
                    {
                        @siteMap.SiteMapPath()
                    }
                </div>
                @Html.Partial("_Message")
                @RenderBody()
