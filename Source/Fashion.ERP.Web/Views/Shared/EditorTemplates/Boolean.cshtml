@model bool?
 
@if (ViewData.ModelMetadata.IsNullableValueType)
{
    @(Html.Kendo().DropDownListFor(model => model)
          .BindTo(new List<SelectListItem>
          {
              new SelectListItem {Text = "Sim", Value = "true"},
              new SelectListItem {Text = "Não", Value = "false"}
          })
          .OptionLabel("  -- Selecione -- ")
          .Name(@Html.NameFor(model => model).ToString())
          .SelectedIndex(Model.HasValue? (Model.ToString().ToLower() == "true" ? 1 : 2): 0)
    )
}
else
{
    @(Html.Kendo().DropDownListFor(model => model)
        .BindTo(new List<SelectListItem>
        {
            new SelectListItem {Text = "Sim", Value = "true"},
            new SelectListItem {Text = "Não", Value = "false"}
        })
        .Name(@Html.NameFor(model => model).ToString())
        .SelectedIndex(Model.ToString().ToLower() == "true" ? 0 : 1)
    )
}