@model String

@(Html.Kendo().DropDownList()
    .OptionLabel("- Selecione -")
    .HtmlAttributes(new { data_value_primitive = "true" })
    .Name("NomeOperacao")
    .DataTextField("Descricao")
    .DataValueField("Nome")
    .DataSource(dataSource => dataSource.Read(read => read.Action("OperacoesPorSetor", "OperacaoProducao",new {Area="Comum"}).Data("filtroOperacoes"))
        .ServerFiltering(true))
    .CascadeFrom("NomeSetor")
)