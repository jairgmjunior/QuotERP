@model Fashion.ERP.Web.Models.LoginModel
<!doctype html>
<html lang="pt-BR">
    <head>
        <title>Fashion ERP - Login</title>
        <link rel="shortcut icon" href="~/favicon.png" />
        <meta http-equiv="content-type" content="text/html; charset=UTF-8"/>
        <meta name="viewport" content="width=device-width, initial-scale=1.0">

        @Styles.Render(Links.Bundles.Styles.Bootstrap,
                       Links.Bundles.Styles.Kendo,
                       Links.Bundles.Styles.Login)

        @Scripts.Render(Links.Bundles.Scripts.Jquery,
                        Links.Bundles.Scripts.JqueryValidation,
                        Links.Bundles.Scripts.JqueryGlobalize,
                        Links.Bundles.Scripts.Bootstrap,
                        Links.Bundles.Scripts.Kendo,
                        Links.Bundles.Scripts.FashionErp)
    </head>
<body>

    <div class="navbar navbar-fixed-top">
        <div class="container">
            <a class="btn-default navbar-btn" data-toggle="collapse" data-target=".nav-collapse">
                <span class="icon-bar"></span>
                <span class="icon-bar"></span>
                <span class="icon-bar"></span>
            </a>
            <div class="navbar-header">
                <a class="navbar-brand" href="/">
                    @*<img src="@Url.Content("~/Content/images/logo.png")" alt="ERP - Fashion">*@
                </a>
            </div>
        </div>
    </div>

    <div class="container">
        <div id="row" style="padding-top: 200px">
            <div class="col-md-4 col-md-offset-4">
                <div class="panel panel-default">
                    <div class="panel-heading">
                        <h3 class="panel-title">FashionERP</h3>
                    </div>        
                    <div class="panel-body">
                        @using (Html.BeginForm("Login", "Home", FormMethod.Post, new { autocomplete="off", id = "form", @class = "form login-form" }))
                        {
                            <fieldset>
                                <div class="form-group">
                                    @Html.TextBoxFor(x => x.Usuario, new { autocomplete="off",placeholder= "Usuário", @class = "form-control"})
                                </div>
                                <div class="form-group">
                                    @Html.PasswordFor(x => x.Senha, new { autocomplete="off",placeholder= "Senha", @class = "form-control"})
                                </div>
                                @Html.Partial("_MessagePopup")
                                <button type="submit" class="btn btn-primary btn-block" data-loading-text="Aguarde...">Login</button>

                            </fieldset>
                        }
                    </div>
                </div>
            </div>
        </div>
    </div>

    


        <footer class="navbar-fixed-bottom">
            <div class="col-sm-12">
                <div class="row">
                    <div class="pull-left">
                        <p>Fashion ERP © 2015 | <span class="glyphicon glyphicon-envelope"></span>contato@fashionsistemas.com.br</p>
                    </div>
                    <div class="pull-right">
                        <p>Desenvolvido por Fashion Consultoria & Sistemas</p>
                    </div>
                </div>
            </div>
        </footer> 

</body>
</html>
