@model IEnumerable<Fashion.ERP.Web.Areas.Compras.Models.GridTransportadoraModel>

<div class="well well-small">
    @Html.ActionLinkAuth("Novo", MVC.Compras.Transportadora.Novo(), new { @class = "btn btn-primary" })
</div>
@Html.ValidationSummaryEx()
@(Html.Kendo().Grid(Model)
	.Name("Grid")
	.Columns(columns =>
	{
		columns.Bound(x => x.Codigo);
        columns.Bound(x => x.CpfCnpj);
        columns.Bound(x => x.Nome);
        columns.Template(item => Html.EditarAuth(MVC.Compras.Transportadora.Editar(item.Id))).Width(80);
        columns.Template(item => Html.EditarSituacaoAuth(MVC.Compras.Transportadora.EditarSituacao(item.Id), item.Ativo)).Width(80);
	})
)