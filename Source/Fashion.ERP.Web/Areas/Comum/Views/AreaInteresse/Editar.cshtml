@model Fashion.ERP.Web.Areas.Comum.Models.AreaInteresseModel

@using (Html.BeginForm(MVC.Comum.AreaInteresse.Editar(), FormMethod.Post, new { id="form", @class = "form-horizontal" })) {
	@Html.AntiForgeryToken()
    @Html.ValidationSummaryEx()
    @Html.Partial("_NovoOuEditar", Model)
	<div class="form-actions">
        <button id="btnSubmit" class="btn btn-primary" type="submit" data-loading-text="Aguarde...">Salvar</button>
        @Html.ExcluirAuth(MVC.Comum.AreaInteresse.Excluir(Model.Id))
	</div>
}
@{ Html.RenderPartial("_ConfirmDelete"); }