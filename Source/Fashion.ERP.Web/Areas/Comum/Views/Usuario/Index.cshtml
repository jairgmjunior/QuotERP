@model IEnumerable<Fashion.ERP.Domain.Comum.Usuario>

<div class="well well-sm">
    @Html.ActionLinkAuth("Novo", MVC.Comum.Usuario.Novo(), new { @class = "btn btn-primary" })
</div>
@Html.ValidationSummaryEx()
@(Html.Kendo().Grid(Model)
    .Name("Grid")
    .Columns(columns =>
    {
        columns.Bound(x => x.Nome);
        columns.Bound(x => x.Login);
        columns.Template(item => Html.EditarAuth(MVC.Comum.Usuario.Editar(item.Id.GetValueOrDefault()))).Width(80);
    })
)