@model IEnumerable<Fashion.ERP.Web.Areas.Comum.Models.GridClienteModel>

<div class="well well-small">
    @Html.ActionLinkAuth("Novo", MVC.Comum.Cliente.Novo(), new { @class = "btn btn-primary" })
</div>
@Html.ValidationSummaryEx()
@(Html.Kendo().Grid(Model)
    .Name("Grid")
    .Columns(columns =>
    {
        columns.Bound(x => x.Codigo);
        columns.Bound(x => x.CpfCnpj);
        columns.Bound(x => x.Nome);
        columns.Bound(x => x.DataCadastro).Format("{0:dd/MM/yyyy}");
        columns.Template(item => Html.EditarAuth(MVC.Comum.Cliente.Editar(item.Id))).Width(80);
    })
)