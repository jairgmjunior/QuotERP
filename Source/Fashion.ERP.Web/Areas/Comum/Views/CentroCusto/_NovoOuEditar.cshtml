@model Fashion.ERP.Web.Areas.Comum.Models.CentroCustoModel

@Html.HiddenFor(x => x.Codigo)

<div class='header'>
    <h2 class="color-primary">Dados do Centro de Custo</h2>
</div>

<div class="content">
    <div class="form-group">
        @Html.LabelForRequired(x => x.Nome, new { @class="col-sm-3 control-label" })
        
        <div class="col-sm-6">
            @Html.TextBoxFor(x => x.Nome, new { @class="form-control" })
            @Html.ValidationMessageFor(x => x.Nome, null, new { @class="help-block" })
        </div>
    </div>
</div>
