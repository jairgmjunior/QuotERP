@model IEnumerable<Fashion.ERP.Web.Areas.Comum.Models.GridFuncionarioModel>

<div class="well well-sm">
    @Html.ActionLinkAuth("Novo", MVC.Comum.Funcionario.Novo(), new { @class = "btn btn-primary" })
</div>
@Html.ValidationSummaryEx()

<div class="table-responsive">
    @(Html.Kendo().Grid(Model)
	    .Name("Grid")
	    .Columns(columns =>
	    {
		    columns.Bound(x => x.Codigo);
		    columns.Bound(x => x.CpfCnpj);
		    columns.Bound(x => x.Nome);
            columns.Bound(x => x.FuncaoFuncionario);
            columns.Template(item => Html.EditarAuth(MVC.Comum.Funcionario.Editar(item.Id))).Width(80);
            columns.Template(item => Html.EditarSituacaoAuth(MVC.Comum.Funcionario.EditarSituacao(item.Id), item.Ativo)).Width(80);
	    }))
</div>