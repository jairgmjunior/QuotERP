@model Fashion.ERP.Web.Areas.Comum.Models.FichaFuncionarioModel

@section javascript{@Scripts.Render(Links.Bundles.Scripts.PdfObject)}

@using (Html.BeginForm(MVC.Comum.Relatorio.FichaFuncionario(), FormMethod.Post, new { @class = "form-horizontal  small-labels" }))
{
    <div class="accordion" id="accordion">
        <div class="accordion-group">
            <div class="accordion-heading">
                <a class="accordion-toggle" data-toggle="collapse" data-parent="#accordion" href="#collapsePesquisar">Pesquisar
                </a>
            </div>
            <div id="collapsePesquisar" class="accordion-body collapse in">
                <div class="accordion-inner">
                    <div class="row">
                        <div class="col-md-2">
                            <div class="form-group">
                                @Html.LabelForRequired(x => x.Codigo, new { @class = "control-label " })
                                <div class="controls">
                                    @Html.TextBoxFor(x => x.Codigo, new { @class = "input-small" })
                                </div>
                            </div>
                        </div>
                        <div class="col-md-10">
                            <div class="form-group">
                                @Html.LabelForRequired(x => x.Nome)
                                <div class="controls">
                                    @Html.TextBoxFor(x => x.Nome, new { @class = "input-xxlarge" })
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-md-3">
                            <div class="form-group">
                                @Html.LabelForRequired(x => x.Cpf)
                                <div class="controls">
                                    @Html.EditorFor(x => x.Cpf)
                                    @Html.ValidationMessageFor(x => x.Cpf, null, new { @class = "help-block" })
                                </div>
                            </div>
                        </div>
                        <div class="col-md-3">
                            <div class="form-group">
                                @Html.LabelForRequired(x => x.DocumentoIdentidade)
                                <div class="controls">
                                    @Html.TextBoxFor(x => x.DocumentoIdentidade, new { @class = "input-medium" })
                                    @Html.ValidationMessageFor(x => x.DocumentoIdentidade, null, new { @class = "help-block" })
                                </div>
                            </div>
                        </div>
                        <div class="col-md-3">
                            <div class="form-group">
                                @Html.LabelForRequired(x => x.DataNascimento)
                                <div class="controls">
                                    @Html.EditorFor(x => x.DataNascimento)
                                    @Html.ValidationMessageFor(x => x.DataNascimento, null, new { @class = "help-block" })
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-md-3">
                            <div class="form-group">
                                @Html.LabelForRequired(x => x.InscricaoEstadual)
                                <div class="controls">
                                    @Html.TextBoxFor(x => x.InscricaoEstadual, new { @class = "input-medium" })
                                    @Html.ValidationMessageFor(x => x.InscricaoEstadual, null, new { @class = "help-block" })
                                </div>
                            </div>
                        </div>
                        <div class="col-md-3">
                            <div class="form-group">
                                @Html.LabelForRequired(x => x.FuncaoFuncionario)
                                <div class="controls">
                                    @Html.DropDownListFor(x => x.FuncaoFuncionario, Model.FuncaoFuncionario.ToSelectList(), "", new { @class = "input-medium" })
                                </div>
                            </div>
                        </div>
                        <div class="col-md-9">
                            <div class="pull-right">
                                <button id="pesquisar-relatorio" class="btn btn-primary" type="button" data-loading-text="Aguarde...">Pesquisar</button>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
}
<div id="pdf"></div>
