@model Fashion.ERP.Web.Areas.Comum.Models.TamanhoModel

<div class='header'>
    <h2 class="color-primary">Tamanho</h2>
</div>

<div class="content">
    <div class="form-group">
        @Html.LabelForRequired(x => x.Descricao, new { @class="col-sm-3 control-label" })
    <div class="col-sm-6">
        @Html.EditorFor(x => x.Descricao)
        @Html.ValidationMessageFor(x => x.Descricao, null, new { @class = "help-block" })
    </div>
    </div>
    <div class="form-group">
        @Html.LabelForRequired(x => x.Sigla, new { @class="col-sm-3 control-label" })
    <div class="col-sm-6">
        @Html.EditorFor(x => x.Sigla)
        @Html.ValidationMessageFor(x => x.Sigla, null, new { @class = "help-block" })
    </div>
    </div>
</div>
