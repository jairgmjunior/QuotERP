@model IEnumerable<Fashion.ERP.Web.Areas.Comum.Models.GridColecaoModel>
<div class="well well-sm">
    @Html.ActionLinkAuth("Novo", MVC.Comum.Colecao.Novo(), new { @class = "btn btn-primary" })
</div>
@Html.ValidationSummaryEx()
@(Html.Kendo().Grid(Model)
    .Name("Grid")
    .Columns(columns =>
    {
        columns.Bound(x => x.Descricao);
        columns.Template(item => Html.EditarAuth(MVC.Comum.Colecao.Editar(item.Id))).Width(80);
        columns.Template(item => Html.EditarSituacaoAuth(MVC.Comum.Colecao.EditarSituacao(item.Id), item.Ativo)).Width(80);
    })
)