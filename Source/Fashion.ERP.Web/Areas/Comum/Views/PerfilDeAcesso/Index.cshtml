@model IEnumerable<Fashion.ERP.Domain.Comum.PerfilDeAcesso>

<div class="well">
    @Html.ActionLinkAuth("Novo", MVC.Comum.PerfilDeAcesso.Novo(), new { @class = "btn btn-primary" })
</div>
@Html.ValidationSummaryEx()
@(Html.Kendo().Grid(Model)
    .Name("Grid")
    .Columns(columns =>
    {
        columns.Bound(x => x.Nome);
        columns.Template(item => Html.EditarAuth(MVC.Comum.PerfilDeAcesso.Editar(item.Id.GetValueOrDefault()))).Width(80);
    })
)