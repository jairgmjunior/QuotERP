@model Fashion.ERP.Web.Areas.Comum.Models.ContatoModel

@{
    Layout = null;
}

<div class="modal-header">
    <a href="javascript:void(0)" class="close" data-dismiss="modal" aria-hidden="true">&times;</a>
    <h3>Contato</h3>
</div>

<div id="modal-body-contato" class="modal-body" style="overflow-y: hidden;">

    <div class="content form-horizontal">

        <div class="content form-horizontal">
            @Html.AntiForgeryToken()
    @Html.ValidationSummaryEx()
    @Html.HiddenFor(x => x.Pessoa)

            <div class="form-group">
                @Html.LabelForRequired(x => x.TipoContato, new { @class="col-sm-4 control-label" })
                <div class="col-sm-6">
                    @Html.DropDownListFor(p => p.TipoContato, Model.TipoContato.ToSelectList())
                    @Html.ValidationMessageFor(x => x.TipoContato, null, new { @class="help-block" })
                </div>
            </div>

            <div class="form-group">
                @Html.LabelForRequired(x => x.Nome, new { @class="col-sm-4 control-label" })
                <div class="col-sm-6">
                    @Html.EditorFor(x => x.Nome)
                    @Html.ValidationMessageFor(x => x.Nome, null, new { @class="help-block" })
                </div>
            </div>

            <div class="form-group">
                @Html.LabelForRequired(x => x.Telefone, new { @class="col-sm-4 control-label" })
                <div class="col-sm-6">
                    @Html.EditorFor(x => x.Telefone)
                    @Html.ValidationMessageFor(x => x.Telefone, null, new { @class="help-block" })
                </div>
            </div>

            <div class="form-group">
                @Html.LabelForRequired(x => x.Operadora, new { @class="col-sm-4 control-label" })
                <div class="col-sm-6">
                    @Html.EditorFor(x => x.Operadora)
                    @Html.ValidationMessageFor(x => x.Operadora, null, new { @class="help-block" })
                </div>
            </div>

            <div class="form-group">
                @Html.LabelForRequired(x => x.Email, new { @class="col-sm-4 control-label" })
                <div class="col-sm-6">
                    @Html.EditorFor(x => x.Email)
                    @Html.ValidationMessageFor(x => x.Email, null, new { @class="help-block" })
                </div>
            </div>
        </div>

    </div>

</div>

<div class="modal-footer">
    <button type="button" class="btn" data-dismiss="modal" aria-hidden="true">Cancelar</button>
    <button class="btn btn-primary" type="submit" data-loading-text="Aguarde...">Salvar</button>
</div>
