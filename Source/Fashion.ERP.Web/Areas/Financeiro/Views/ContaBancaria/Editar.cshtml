@model Fashion.ERP.Web.Areas.Financeiro.Models.ContaBancariaModel

@using (Html.BeginForm(MVC.Financeiro.ContaBancaria.Editar(), FormMethod.Post, new { id="form", @class = "form-horizontal" })) {
	@Html.AntiForgeryToken()
    @Html.ValidationSummaryEx()
    @Html.Partial("_NovoOuEditar", Model)
	<div class="form-actions">
        <button id="btnSubmit" class="btn btn-primary" type="submit" data-loading-text="Aguarde...">Salvar</button>
        @Html.ExcluirAuth(MVC.Financeiro.ContaBancaria.Excluir(Model.Id))
	</div>
}
@{
    Html.RenderAction("Pesquisar", "Banco", new { area = "Comum" });
    Html.RenderPartial("_ConfirmDelete");
}
