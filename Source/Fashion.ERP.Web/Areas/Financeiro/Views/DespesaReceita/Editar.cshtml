@model Fashion.ERP.Web.Areas.Financeiro.Models.DespesaReceitaModel

@using (Html.BeginForm(MVC.Financeiro.DespesaReceita.Editar(), FormMethod.Post, new { id="form", @class = "form-horizontal" })) {
	@Html.AntiForgeryToken()
    @Html.ValidationSummaryEx()
    @Html.Partial("_NovoOuEditar", Model)
	<div class="form-actions">
        <button id="btnSubmit" class="btn btn-primary" type="submit" data-loading-text="Aguarde...">Salvar</button>
        @Html.ExcluirAuth(MVC.Financeiro.DespesaReceita.Excluir(Model.Id))
	</div>
}
@{Html.RenderPartial("_ConfirmDelete");}