@model Fashion.ERP.Web.Areas.Financeiro.Models.DespesaReceitaModel

<fieldset>
    <legend><small>Dados da Despesa/Receita</small></legend>
    <div class="row">
        <div class="col-sm-6">
            <div class="form-group form-group-sm">
                @Html.LabelForRequired(x => x.TipoDespesaReceita)
                <div class='col-sm-8 col-md-8 col-lg-7'>
                    @Html.DropDownListFor(x => x.TipoDespesaReceita, Model.TipoDespesaReceita.ToSelectList(), new {  @class = "form-control" })
                    @Html.ValidationMessageFor(x => x.TipoDespesaReceita, null, new { @class="help-block" })
                </div>
            </div>
            <div class="form-group form-group-sm">
                @Html.LabelForRequired(x => x.Descricao)
                <div class='col-sm-8 col-md-8 col-lg-7'>
                    @Html.TextBoxFor(x => x.Descricao, new {  @class = "form-control" })
                    @Html.ValidationMessageFor(x => x.Descricao, null, new { @class="help-block" })
                </div>
            </div>
        </div>
    </div>
</fieldset>

@Html.HiddenFor(m => m.Ativo)

@Html.FormActionAuth(this.IsEditar(), MVC.Financeiro.DespesaReceita.Excluir(Model.Id))