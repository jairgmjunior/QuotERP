@model Fashion.ERP.Web.Areas.Almoxarifado.Models.MarcaMaterialModel

<div class='header'>
    <h2 class="color-primary">Dados da Marca do Catálogo</h2>
</div>

<div class="content">
    <div class="form-group">
        @Html.LabelForRequired(x => x.Nome, new { @class="col-sm-3 control-label" })
    <div class="col-sm-6">
        @Html.EditorFor(x => x.Nome, new { @class="form-control" })
        @Html.ValidationMessageFor(x => x.Nome, null, new { @class="help-block" })
    </div>
    </div>
</div>
