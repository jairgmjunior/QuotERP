@model Fashion.ERP.Web.Areas.Almoxarifado.Models.CategoriaModel

<div class='header'>
    <h2 class="color-primary">Dados da categoria</h2>
</div>

<div class="content">
    <div class="form-group">
        @Html.LabelForRequired(x => x.Nome, new { @class="col-sm-3 control-label" })
            <div class="col-sm-6">
                @Html.TextBoxFor(x => x.Nome, new { @class="form-control" })
                @Html.ValidationMessageFor(x => x.Nome, null, new { @class="help-block" })
            </div>
    </div>
    <div class="form-group">
        @Html.LabelForRequired(x => x.CodigoNcm, new { @class="col-sm-3 control-label" })
            <div class="col-sm-6">
                @Html.TextBoxFor(x => x.CodigoNcm, new { data_mask = "99999999" , @class="form-control" })
                @Html.ValidationMessageFor(x => x.Nome, null, new { @class="help-block" })
            </div>
    </div>
    <div class="form-group">
        @Html.LabelForRequired(x => x.TipoCategoria, new { @class="col-sm-3 control-label" })
            <div class="col-sm-6">
                @Html.DropDownListFor(x => x.TipoCategoria, Model.TipoCategoria.ToSelectList(), new { @class="form-control" })
                @Html.ValidationMessageFor(x => x.Nome, null, new { @class="help-block" })
            </div>
    </div>
    <div class="form-group">
        @Html.LabelForRequired(x => x.GeneroCategoria, new { @class="col-sm-3 control-label" })
            <div class="col-sm-6">
                @Html.DropDownListFor(x => x.GeneroCategoria, Model.GeneroCategoria.ToSelectList(), new { @class="form-control" })
                @Html.ValidationMessageFor(x => x.Nome, null, new { @class="help-block" })
            </div>
    </div>
</div>
