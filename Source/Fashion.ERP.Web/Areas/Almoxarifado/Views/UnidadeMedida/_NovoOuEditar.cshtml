@model Fashion.ERP.Web.Areas.Almoxarifado.Models.UnidadeMedidaModel
<div class='header'>
        <h2 class="color-primary">Dados da Unidade de Medida</h2>
    </div>

<div class="content">
    <div class="form-group">
    @Html.LabelForRequired(x => x.Sigla, new { @class="col-sm-3 control-label" })
    <div class="col-sm-6">
        @Html.EditorFor(x => x.Sigla, new { @class="form-control" })
        @Html.ValidationMessageFor(x => x.Sigla, null, new { @class = "help-block" })
    </div>
</div>
<div class="form-group">
    @Html.LabelForRequired(x => x.Descricao, new { @class="col-sm-3 control-label" })
    <div class="col-sm-6">
        @Html.EditorFor(x => x.Descricao, new { @class="form-control" })
        @Html.ValidationMessageFor(x => x.Descricao, null, new { @class = "help-block" })
    </div>
</div>
<div class="form-group">
    @Html.LabelForRequired(x => x.FatorMultiplicativo, new { @class="col-sm-3 control-label" })
    <div class="col-sm-6 padding-none">
        @(Html.Kendo().NumericTextBoxFor(x => x.FatorMultiplicativo)
              .Format("n14").Decimals(14)
              .Min(0)
              .HtmlAttributes(new { @class = "percent input-medium" }))
        @Html.ValidationMessageFor(x => x.FatorMultiplicativo, null, new { @class = "help-block" })
    </div>
</div>
</div>
