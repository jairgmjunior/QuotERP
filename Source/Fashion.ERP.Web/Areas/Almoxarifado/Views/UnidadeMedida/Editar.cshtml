@model Fashion.ERP.Web.Areas.Almoxarifado.Models.UnidadeMedidaModel

<div class="block-flat">
    @using (Html.BeginForm(MVC.Almoxarifado.UnidadeMedida.Editar(), FormMethod.Post, new { id="form", @class = "form-horizontal" })) {
	    @Html.AntiForgeryToken()
        @Html.ValidationSummaryEx()
        @Html.Partial("_NovoOuEditar", Model)
        <div class="form-group clearfix">
            <div class="col-sm-offset-3 col-sm-10 topOffset-15">
                <button id="btnSubmit" class="btn btn-primary" type="submit" data-loading-text="Aguarde...">Salvar</button>
                 @Html.ExcluirAuth(MVC.Almoxarifado.UnidadeMedida.Excluir(Model.Id))
            </div>
        </div>

    }
    @{Html.RenderPartial("_ConfirmDelete");}

</div>