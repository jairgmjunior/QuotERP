@using Fashion.Framework.Mvc.Extensions
@model Fashion.ERP.Web.Areas.Almoxarifado.Models.FamiliaModel

@using (Html.BeginForm(MVC.Almoxarifado.Familia.Novo(), FormMethod.Post, new { id="form", @class = "form-horizontal" })) {
	@Html.AntiForgeryToken()
    @Html.ValidationSummaryEx()
    @Html.Partial("_NovoOuEditar", Model)
    <div class="row">
        <div class="col-sm-6 form-group"> 
            <div class="col-sm-offset-4 col-md-offset-3 col-sm-8 col-md-9">
