@model Fashion.ERP.Web.Areas.Almoxarifado.Models.FamiliaModel

@using (Html.BeginForm(MVC.Almoxarifado.Familia.Editar(), FormMethod.Post, new { id="form", @class = "form-horizontal" })) {
	@Html.AntiForgeryToken()
    @Html.ValidationSummaryEx()
    @Html.Partial("_NovoOuEditar", Model)
    <div class="row">
        <div class="col-sm-6 form-group"> 
            <div class="col-sm-offset-4 col-md-offset-3 col-sm-8 col-md-9">
		        <button id="btnSubmit" class="btn btn-primary" type="submit" data-loading-text="Aguarde...">Salvar</button>
		        @Html.ExcluirAuth(MVC.Almoxarifado.Familia.Excluir(Model.Id))
            </div>
        </div>     
    </div>
}
@{Html.RenderPartial("_ConfirmDelete");}