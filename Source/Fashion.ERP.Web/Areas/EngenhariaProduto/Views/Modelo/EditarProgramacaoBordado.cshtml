@model Fashion.ERP.Web.Areas.EngenhariaProduto.Models.ProgramacaoBordadoModel

@section javascript{@Scripts.Render(Links.Bundles.Scripts.ArquivoUpload)}

@using (Html.BeginForm(MVC.EngenhariaProduto.Modelo.EditarProgramacaoBordado(), FormMethod.Post, new { id="form", @class = "form-horizontal" })) {
	@Html.AntiForgeryToken()
    @Html.ValidationSummaryEx()
    @Html.Partial("_NovoOuEditarProgramacaoBordado", Model)

    <div class="row">
        <div class="col-sm-6">
            <div class="form-group form-group-sm">
                <div class="col-sm-offset-4 col-md-offset-3 col-sm-8 col-md-9">
                    <button id="btnSubmit" class="btn btn-primary" type="submit" data-loading-text="Aguarde...">Salvar</button>
                    @Html.ExcluirAuth(MVC.EngenhariaProduto.Modelo.ExcluirProgramacaoBordado(Model.Modelo, Model.Id))
                </div>
            </div>
        </div>     
    </div>
}
@{
    Html.RenderAction("Pesquisar", "Funcionario", new { area = "Comum", funcaoFuncionario = "ProgramadorBordado" });
    Html.RenderPartial("_ConfirmDelete");
}