@model IEnumerable<Fashion.ERP.Web.Areas.EngenhariaProduto.Models.GridProdutoBaseModel>
<div class="well well-small">
    @Html.ActionLinkAuth("Novo", MVC.EngenhariaProduto.ProdutoBase.Novo(), new { @class = "btn btn-primary" })
</div>
@Html.ValidationSummaryEx()
@(Html.Kendo().Grid(Model)
    .Name("Grid")
    .Columns(columns =>
    {
        columns.Bound(x => x.Descricao);
        columns.Template(item => Html.EditarAuth(MVC.EngenhariaProduto.ProdutoBase.Editar(item.Id))).Width(80);
        columns.Template(item => Html.EditarSituacaoAuth(MVC.EngenhariaProduto.ProdutoBase.EditarSituacao(item.Id), item.Ativo)).Width(80);
    })
)