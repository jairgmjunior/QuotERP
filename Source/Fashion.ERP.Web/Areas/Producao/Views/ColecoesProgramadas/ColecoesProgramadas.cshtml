@model Fashion.ERP.Web.Areas.Producao.Models.ColecaoProgramadaModel
@section javascript{@Scripts.Render(Links.Bundles.Scripts.PdfObject)}

@using (Html.BeginForm(MVC.Producao.ColecaoProgramada.EstimativaConsumoProgramado(), FormMethod.Post, new { @class = "form-horizontal small-labels" }))
{
    <div class="accordion" id="accordion">
    <div class="accordion-group">
        <div class="accordion-heading">
            <a class="accordion-toggle" data-toggle="collapse" data-parent="#accordion" href="#collapsePesquisar">
                Pesquisar
            </a>
        </div>
        <div id="collapsePesquisar" class="accordion-body collapse in">
            <div class="accordion-inner">
                <div class="row">
                    <div class="span6">
                        <div class="control-group">
                            @Html.LabelForRequired(x => x.ColecoesProgramadas)
                            <div class="controls">
                                @(Html.Kendo().MultiSelect()
                                      .Name("Marcas")
                                      .BindTo(ViewBag.ColecoesProgramadas)
                                      .Value(Model.ColecoesProgramadas)
                                      )
                            </div>
                        </div>
                    </div>
                </div>
                <div class="row">
                    <div class="span2" style="-ms-opacity: 0.99; opacity: 0.99;">
                        <div class="control-group">
                            @Html.LabelForRequired(x => x.DataInicial)
                            <div class="controls">
                                @Html.EditorFor(x => x.DataInicial, new { @class = "input-small" })
                            </div>
                        </div>
                    </div>
                    <div class="span4">
                        <div class="control-group">
                            @Html.LabelForRequired(x => x.DataFinal)
                            <div class="controls">
                                @Html.EditorFor(x => x.DataFinal, new { @class = "input-small" })
                            </div>
                        </div>
                    </div>
                </div>
                <div class="row">
                    <div class="span3">
                    </div>
                    <div class="span2">
                        <div class="control-group">
                            @Html.LabelForRequired(x => x.OrdenarPor, new { @class = "control-label " })
                            <div class="controls">
                                @Html.DropDownList("OrdenarPor", "--Selecione--")
                            </div>
                        </div>
                    </div>
                    <div class="span3">
                        <div class="control-group">
                            @Html.LabelForRequired(x => x.OrdenarEm, new { @class = "control-label " })
                            <div class="controls">
                                <select name="OrdenarEm">
                                    <option value="asc">Ascendente</option>
                                    <option value="desc">Descendente</option>
                                </select>
                            </div>
                        </div>
                    </div>
                    <div class="span3">
                        <button id="pesquisar-relatorio" class="btn btn-info pull-right" type="button" data-loading-text="Aguarde...">Pesquisar</button>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
}
<div id="pdf"></div>
