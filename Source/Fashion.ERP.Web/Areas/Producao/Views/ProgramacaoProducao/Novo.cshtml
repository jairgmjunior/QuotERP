@model Fashion.ERP.Web.Areas.Producao.Models.ProgramacaoProducaoModel

@using (Html.BeginForm(MVC.Producao.ProgramacaoProducao.Novo(), FormMethod.Post, new { id="form", @class = "form-horizontal" })) {
	@Html.AntiForgeryToken()
    @Html.ValidationSummaryEx()
    @Html.Partial("_NovoOuEditar", Model)
	<div class="form-actions">
		<button id="btnSubmit" class="btn btn-primary" type="submit" data-loading-text="Aguarde...">Salvar</button>
	</div>
}

<script>
    $(document).ready(function () {
        $("#Quantidade").attr("disabled", "disabled");
        $("#SituacaoProgramacaoProducao").attr("disabled", "disabled");
    });
</script>

@{
    Html.RenderAction("PesquisarVarios", "FichaTecnica", new { area = "Producao" });    
    Html.RenderAction("Pesquisar", "Funcionario", new { area = "Comum" }); 
    Html.RenderAction("MatrizCorte", "ProgramacaoProducao", new { area = "Producao" });
}