@(Html.Kendo().TabStrip()
    .Name("tabstrip")
    .Events(events => events
        .ContentLoad("onContentLoad")
    )
    .Items(tabstrip =>
    {
        tabstrip.Add().Text("Básicos")
            .Selected(true)
            .LoadContentFrom("Basicos", "FichaTecnica", new { fichaTecnicaId = ( ViewContext.RouteData.Values.ContainsKey("id") ? ViewContext.RouteData.GetRequiredString("id") : null ) });
        tabstrip.Add().Text("Processos")
            .Selected(false)
            .Enabled(true)
            .LoadContentFrom("Processos", "FichaTecnica", new { fichaTecnicaId = ( ViewContext.RouteData.Values.ContainsKey("id") ? ViewContext.RouteData.GetRequiredString("id") : null )});
        tabstrip.Add().Text("Material")
            .Selected(false)
            .Enabled(true)
            .LoadContentFrom("Material", "FichaTecnica", new { fichaTecnicaId = ( ViewContext.RouteData.Values.ContainsKey("id") ? ViewContext.RouteData.GetRequiredString("id") : null ) });
        tabstrip.Add().Text("Modelagem")
            .Selected(false)
            .Enabled(true)
            .LoadContentFrom("Modelagem", "FichaTecnica", new { fichaTecnicaId = ( ViewContext.RouteData.Values.ContainsKey("id") ? ViewContext.RouteData.GetRequiredString("id") : null ) });
        tabstrip.Add().Text("Fotos")
            .Selected(false)
            .Enabled(true)
            .LoadContentFrom("Fotos", "FichaTecnica", new { fichaTecnicaId = ( ViewContext.RouteData.Values.ContainsKey("id") ? ViewContext.RouteData.GetRequiredString("id") : null ) });
    }).SelectedIndex(0)
)

@{
    Html.RenderAction("Pesquisar", "Material", new { area = "Almoxarifado" });
}

@Scripts.Render("~/js/arquivoupload.js")
@Scripts.Render("~/Scripts/jquery.Jcrop.js")
@Scripts.Render("~/js/fotoupload.js")
@*@Scripts.Render("~/Scripts/lightbox-2.6.min.js")*@
@Scripts.Render("~/js/Producao/FichaTecnica/basicos.js")
@Scripts.Render("~/js/Producao/FichaTecnica/processos.js")
@Scripts.Render("~/js/Producao/FichaTecnica/material.js")
@Scripts.Render("~/js/Producao/FichaTecnica/modelagem.js")
@Scripts.Render("~/js/Producao/FichaTecnica/fotos.js")

<script>
    $(document).ready(function(e) {
        var tabStrip = $("#tabstrip").data("kendoTabStrip");
        var tabProcessos = $('li[aria-controls="tabstrip-2"]');
        var tabMateriais = $('li[aria-controls="tabstrip-3"]');
        var tabModelagem = $('li[aria-controls="tabstrip-4"]');
        var tabFotos = $('li[aria-controls="tabstrip-5"]');

        tabStrip.enable(tabProcessos, false);
        tabStrip.enable(tabMateriais, false);
        tabStrip.enable(tabModelagem, false);
        tabStrip.enable(tabFotos, false);
    });

    function onContentLoad(e) {
        onContentLoadBasicos(e);
        onContentLoadProcessos(e);
        onContentLoadMaterial(e);
        onContentLoadModelagem(e);
        onContentLoadFotos(e);
    }

    function formateDecimalGrid(valor) {
        if (valor == null) {
            return null;
        }
        return valor.toString().replace(".", ",");
    }
</script>

